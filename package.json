{
  "name": "crap-stories-node",
  "version": "1.0.0",
  "description": "",
  "engines": {
    "node": ">=17.x",
    "npm": ">=8.x"
  },
  "main": "index.js",
  "scripts": {
    "start": "npm run build && node dist/index.js",
    "start:inspect": "npm run build && node --inspect dist/index.js",
    "start:watch": "nodemon --exec yarn start:inspect --ignore dist/",
    "test": "jest --coverage --watch --runInBand",
    "test:ci": "jest --coverage --watchAll=false --runInBand",
    "test:inspect": "node -r @swc-node/register --inspect-brk node_modules/.bin/jest --runInBand",
    "build": "swc src -d dist",
    "heroku-postbuild": "yarn build && npm run migrate",
    "lint": "eslint src/**/*.js",
    "knex": "node -r @swc-node/register node_modules/.bin/knex"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {}
  },
  "author": "",
  "license": "WTFPL",
  "dependencies": {
    "@hapi/joi": "17.1.1",
    "@vscode/sqlite3": "^5.1.4-vscode",
    "bcrypt": "^5.1.0",
    "body-parser": "1.20.2",
    "compression": "1.7.4",
    "consola": "3.0.2",
    "cors": "2.8.5",
    "dotenv": "16.0.3",
    "express": "4.18.2",
    "express-joi-validation": "5.0.1",
    "http-status": "1.6.2",
    "jsonwebtoken": "^9.0.0",
    "knex": "2.4.2",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "8.10.0",
    "uuid": "9.0.0"
  },
  "devDependencies": {
    "@swc-node/register": "1.6.4",
    "@swc/cli": "0.1.62",
    "@swc/core": "1.3.51",
    "@swc/jest": "0.2.26",
    "eslint": "8.38.0",
    "jest": "29.5.0",
    "nodemon": "2.0.22",
    "prettier": "2.8.7",
    "supertest": "6.3.3",
    "typescript": "^5.0.4"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)s?$": [
        "@swc/jest"
      ]
    },
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "node_modules/",
      "src/config/",
      "dist/"
    ],
    "watchPathIgnorePatterns": [
      "node_modules/",
      "src/config/",
      "dist/",
      "coverage/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    },
    "coverageReporters": [
      "cobertura",
      "json",
      "lcov",
      "text"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.js?$",
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ]
  },
  "prettier": {
    "printWidth": 140
  }
}
